#VRML V2.0 utf8

# mô tả: là cửa chính
# thông số (mỗi cánh cửa rộng 1.2m, cao 2.4m) (chỉ có 1 cánh cửa)

# cửa phải
Transform {
	translation	-0.21 0 0.2
	children [	 
		DEF	SENSOR2 CylinderSensor {
			maxAngle 3.14
			minAngle 0
		}
		DEF canhCuaPhai Transform {
			translation 1.88 0 0
			children [
				Transform {
					translation	-0.6 0 0
					children [
						# thanh dọc (bên trái)
						Transform {
							translation	-0.6 0 0
							children [
								DEF TD Transform {
									children [
										Shape {
											geometry Box {size 0.07 2.4 0.025}
											appearance Appearance {
												material Material {
													diffuseColor 0.9 0.9 0.9
												}
											}
										}
									]
								}
							]
						}

						# thanh dọc (bên phải)
						Transform {
							translation	0.6 0 0
							children [
								USE	TD
							]
						}

						# thanh ngang (bên trên)
						Transform {
							translation	0 1.17 0
							children [
								DEF TN Transform {
									children [
										Shape {
											geometry Box {size 1.2 0.07 0.025}
											appearance Appearance {
												material Material {
													diffuseColor 0.9 0.9 0.9
												}
											}
										}
									]
								}
							]
						}

						# thanh ngang (bên dưới)
						Transform {
							translation	0 -1.17 0
							children [
								USE	TN
							]
						}

						# kính		
						Transform {
							translation	0 0 0
							children [
								Transform {
									children [
										Shape {
											geometry Box {size 1.2 2.4 0.015}
											appearance Appearance {
												material Material {
													diffuseColor 0.9 0.9 0.9
													transparency 0.8
												}
											}
										}
									]
								}
							]
						}

						# tay nắm cửa
						Transform {
							translation	-0.45 -.12 -.15
							children [
								Inline {url "tay_nam_cua_chinh_2tay.wrl"}
							]
						}
					] # end children
				} # end transform
			] # end children
		} # end cửa phải

	] # end children
} # end transform

ROUTE SENSOR2.rotation_changed  TO canhCuaPhai.rotation
