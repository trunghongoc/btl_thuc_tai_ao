#VRML V2.0 utf8
# mô tả bậc thang cửa
# thông số(dài 2.4m, cao 40cm)

# bậc thang 1 rộng 80cm
Transform {
    translation 0 0 0
    children [
        Shape {
            geometry Box { size 2.4 0.15 0.8}
            appearance Appearance {
                material Material{
                    diffuseColor 0.9 0.9 0.9
                }   
            }
        }
    ]
}

# bậc thang 2 rộng 40 cm
Transform {
    translation 0 0.15 -0.2
    children [
        Shape {
            geometry Box { size 2.4 0.15 0.4}
            appearance Appearance {
                material Material{
                    diffuseColor 0.9 0.9 0.9
                }   
            }
        }
    ]
}