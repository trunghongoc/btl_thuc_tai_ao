#VRML V2.0 utf8
# mô tả tường phải
# thông số(dài 8m, cao 3.6m, rộng 20cm)

# kính
Transform {
	children [
		Shape {
			appearance Appearance {
				material  Material {
					diffuseColor 0 0 0
					transparency 0.7
				}
			}
			geometry Box {
				size 0.1 3 7
			}
		}
	]
}

# thanh ngang dưới
Transform {
    translation 0 -1.65 0
    children [
        Shape {
            geometry Box { size 0.2 0.3 8 }
            appearance Appearance {
                material Material{
                    diffuseColor 0.9 0.9 0.9
                }   
            }
        }
    ]
}

