#VRML V2.0 utf8
# mô tả tường phải tầng 2
# thông số(dài 8m, cao 3.8m, rộng 20cm)

# kính
Transform {
    translation 0 0 2.6
	children [
		Shape {
			appearance Appearance {
				material  Material {
					diffuseColor 0 0 0
					transparency 0.7
				}
			}
			geometry Box {
				size 0.1 3.2 1.8
			}
		}
	]
}

# thanh ngang dưới
Transform {
    translation 0 -1.75 0
    children [
        DEF THANH_NGANG Transform {
            children [
                Shape {
                    geometry Box { size 0.2 0.3 8 }
                    appearance Appearance {
                        material Material{
                            diffuseColor 0.670, 0.694, 0.690
                        }   
                    }
                }
            ]
        }
    ]
}

# thanh ngang trên
Transform {
    translation 0 1.75 0
    children [
        USE THANH_NGANG
    ]
}

# thanh dọc trái
Transform {
    translation 0 0 -3.75
    children [
        DEF THANH_DOC Transform {
            children [
                Shape {
                    geometry Box { size 0.2 3.2 0.5 }
                    appearance Appearance {
                        material Material{
                            diffuseColor 0.670, 0.694, 0.690
                        }   
                    }
                }
            ]
        }
    ]
}

# thanh dọc giữa
Transform {
    translation 0 0 1.8
    children [
        USE THANH_DOC
    ]
}

# thanh dọc phải
Transform {
    translation 0 0 3.75
    children [
        USE THANH_DOC
    ]
}


# tường in chữ
Transform {
    translation 0 0 -.8
    children [
        DEF THANH_DOC Transform {
            children [
                Shape {
                    geometry Box { size 0.1 3.4 5.8 }
                    appearance Appearance {
                        material Material{
                            diffuseColor 0.670, 0.694, 0.690
                        }   
                    }
                }
            ]
        }
    ]
}
