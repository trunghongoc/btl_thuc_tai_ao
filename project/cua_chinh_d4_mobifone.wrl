#VRML V2.0 utf8

# mô tả: là cửa chính số 1 (cửa mobifone cũ)
# thông số (mỗi cánh cửa rộng 1.2m, cao 2.4m)

# cửa trái
Transform {
	translation	-0.8 0 0.2
	children [
		DEF	SENSOR1 CylinderSensor {
			maxAngle   0
			minAngle  -3.14
		}
		DEF canhCuaTrai Transform {
			children [
				Transform {
					translation	0.6 0 0
					children [
						# thanh dọc (bên trái)
						Transform {
							translation	-0.6 0 0
							children [
								DEF TD Transform {
									children [
										Shape {
											geometry Box {size 0.07 2.4 0.025}
											appearance Appearance {
												material Material {
													diffuseColor 0.9 0.9 0.9
												}
											}
										}
									]
								}
							]
						}

						# thanh dọc (bên phải)
						Transform {
							translation	0.6 0 0
							children [
								USE	TD
							]
						}

						# thanh ngang (bên trên)
						Transform {
							translation	0 1.17 0
							children [
								DEF TN Transform {
									children [
										Shape {
											geometry Box {size 1.2 0.07 0.025}
											appearance Appearance {
												material Material {
													diffuseColor 0.9 0.9 0.9
												}
											}
										}
									]
								}
							]
						}

						# thanh ngang (bên dưới)
						Transform {
							translation	0 -1.17 0
							children [
								USE	TN
							]
						}

						# kính		
						Transform {
							translation	0 0 0
							children [
								Transform {
									children [
										Shape {
											geometry Box {size 1.2 2.4 0.015}
											appearance Appearance {
												material Material {
													diffuseColor 0.9 0.9 0.9
													transparency 0.8
												}
											}
										}
									]
								}
							]
						}

						# nam cua
						Transform {
							translation	0.4 0 0.03
							children [
								Shape {
									geometry Sphere	{radius 0.04}
									appearance Appearance {
										material Material {
											diffuseColor 0.85 0.85 0.85
										}
									}
								}
							]
						}
					] # end children
				} # end Transform
			] # end children (cấp 1 cửa trái)
		} # end cửa trái

	] # end children
}


# cửa phải
Transform {
	translation	-0.21 0 0.2
	children [	 
		DEF	SENSOR2 CylinderSensor {
			maxAngle 3.14
			minAngle 0
		}
		DEF canhCuaPhai Transform {
			translation 1.88 0 0
			children [
				Transform {
					translation	-0.6 0 0
					children [
						# thanh dọc (bên trái)
						Transform {
							translation	-0.6 0 0
							children [
								USE	TD
							]
						}

						# thanh dọc (bên phải)
						Transform {
							translation	0.6 0 0
							children [
								USE	TD
							]
						}

						# thanh ngang (bên trên)
						Transform {
							translation	0 1.17 0
							children [
								USE	TN
							]
						}

						# thanh ngang (bên dưới)
						Transform {
							translation	0 -1.17 0
							children [
								USE	TN
							]
						}

						# kính		
						Transform {
							translation	0 0 0
							children [
								Transform {
									children [
										Shape {
											geometry Box {size 1.2 2.4 0.015}
											appearance Appearance {
												material Material {
													diffuseColor 0.9 0.9 0.9
													transparency 0.8
												}
											}
										}
									]
								}
							]
						}

						# nam cua
						Transform {
							translation	-0.4 0 0.03
							children [
								Shape {
									geometry Sphere	{radius 0.04}
									appearance Appearance {
										material Material {
											diffuseColor 0.85 0.85 0.85
										}
									}
								}
							]
						}
					] # end children
				} # end transform
			] # end children
		} # end cửa phải

	] # end children
} # end transform

ROUTE SENSOR1.rotation_changed  TO canhCuaTrai.rotation
ROUTE SENSOR2.rotation_changed  TO canhCuaPhai.rotation
