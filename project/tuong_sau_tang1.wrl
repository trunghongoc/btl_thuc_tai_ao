#VRML V2.0 utf8
# mô tả tường sau
# thông số(dài 25.6m, rộng 20cm)

# thanh ngang dưới cao 1.2m
Transform {
    translation 0 0.5 0
    children [
        Shape {
            geometry Box { size 25.6 1.2 0.2 }
            appearance Appearance {
                material Material{
                    diffuseColor 0.670, 0.694, 0.690
                }   
            }
        }
    ]
}

# thanh ngang trên cao 0.4m
Transform {
    translation 0 3.5 0
    children [
        Shape {
            geometry Box { size 25.6 0.4 0.2 }
            appearance Appearance {
                material Material{
                    diffuseColor 0.670, 0.694, 0.690
                }   
            }
        }
    ]
}

# mép tường trái (rộng 0.6m)
Transform {
    translation 12.5 2.2 0
    children [
        DEF MEP_TUONG Transform {
            children [
                Shape {
                    geometry Box { size 0.6 2.4 0.2 }
                    appearance Appearance {
                        material Material{
                            diffuseColor 0.670, 0.694, 0.690
                        }   
                    }
                }
            ]
        }
    ]
}

# tường ngăn cách cửa sổ 1 (từ phải qua trái), rộng 2.4m
Transform {
    translation 10.2 2.2 0
    children [
        DEF TUONG_NGAN_CACH_CUA_SO_TANG1 Transform { # tường ngăn cách cửa sổ tầng 1
            children [
                Shape {
                    geometry Box { size 1.6 2.4 0.2 }
                    appearance Appearance {
                        material Material{
                            diffuseColor 0.670, 0.694, 0.690
                        }   
                    }
                }
            ]
        }
    ]
}

# tường ngăn cách cửa sổ 2 (từ phải qua trái), rộng 2.4m
Transform {
    translation 7.4 2.2 0
    children [
        USE TUONG_NGAN_CACH_CUA_SO_TANG1
