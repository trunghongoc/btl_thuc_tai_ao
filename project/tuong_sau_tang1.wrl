#VRML V2.0 utf8
# mô tả tường sau
# thông số(dài 25.6m, rộng 20cm)

# thanh ngang dưới cao 1m
Transform {
    translation 0 0.5 0
    children [
        Shape {
            geometry Box { size 25.6 1 0.2 }
            appearance Appearance {
                material Material{
                    diffuseColor 0.9 0.9 0.9
                }   
            }
        }
    ]
}

# thanh ngang trên cao 0.2mm
Transform {
    translation 0 3.5 0
    children [
        Shape {
            geometry Box { size 25.6 0.2 0.2 }
            appearance Appearance {
                material Material{
                    diffuseColor 0.9 0.9 0.9
                }   
            }
        }
    ]
}

