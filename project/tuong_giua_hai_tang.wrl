#VRML V2.0 utf8
# mô tả: tường giữa 2 tầng
# thông số: nền dài 26m,cao 1.4cm rộng 8.4m)

Transform {
    translation 0 0 0
    # scale .5 .5 .5
    children [
        # nền
        Transform {
            children [
                Shape {
                    geometry Box { size 26 0.16 8}
                    appearance Appearance {
                        material Material{
                            diffuseColor 0.223 0.278 0.313
                        }   
                    }
                }
            ]
        }

        # ở giữa
        Transform {
            translation .1 .6 0
            children [
                Shape {
                    geometry Box { size 25.6 1.2 7.6}
                    appearance Appearance {
                        material Material{
                            diffuseColor 0.670, 0.694, 0.690
                        }   
                    }
                }
            ]
        }

        # trần
        Transform {
            translation 0 1.3 0
            children [
                Shape {
                    geometry Box { size 26 0.16 8}
                    appearance Appearance {
                        material Material{
                            diffuseColor 0.223 0.278 0.313
                        }   
                    }
                }
            ]
        }
    ]
}
